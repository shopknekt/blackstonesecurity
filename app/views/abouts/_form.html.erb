<%= form_for(@about) do |f| %>
  <div class="field">
    <%= f.label :title, class: "z-service" %><br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :description, class: "z-service" %><br>
    <%= f.cktext_area :description %>
  </div>
  <br>
  <div class="field">
    <%= f.label :image, class: "z-service" %><br>
    <%= f.file_field :image %>
  </div>
  <br>
  <div class="actions z-newservice">
    <%= f.submit style: "color: #fff;" %>
  </div>
<% end %>
