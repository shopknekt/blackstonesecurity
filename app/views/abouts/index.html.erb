
<div id="main"><!-- Main  -->
  <section class="fullwidth-background">
    <div class="breadcrumb-wrapper">
      <div class="container">
       <div class="breadcrumb">
        <%= link_to root_path do%>Home<% end %>
        <span class="fa fa-angle-right"> </span>
        <h4>About Us</h4>
        <h5 class="breadcrumb-title">About Us</h5>
      </div>
    </div>
  </div>
</section>
<div class="hr-invisible"></div>
<div class="clear"></div>

<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= link_to "Create New About", new_about_path, class: "z-back"%>
      </div>
    </div>
  </div>
<% end %>

<section id="primary" class="content-full-width">
  <div class="container">
  <div class="row">
    <div class="col-md-6">
      <% @abouts.where(title: :About).each do |about| %>
        <h2 class="border-title aligncenter">
          <%= about.title %>
        </h2>
<!-- <div class="col-md-6">
    <%#= image_tag about.image.url, alt: "", class: "dt-sc-border-radius"%>
  </div> -->
  <center>
    <p>
     <%= raw about.description %>
   </p>
 </center>
<% if user_signed_in? %>
<%= link_to "Edit", edit_about_path(about),class: "z-back" %>
<%= link_to "Delete", about_path(about), method: :delete, data: { confirm: 'Are you sure?' },class: "z-back" %>
<% end %>
<% end %>
</div>


<div class="col-md-6">
  <% @abouts.where(:title => "Our Mission").each do |about| %>
