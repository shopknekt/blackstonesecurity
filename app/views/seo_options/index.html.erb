<section style="margin-top: 120px;">
<div class="row">
          <% @seo_options.each do |seo_option| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="thumbnail z-show">
                <div class="caption">
                  <p><b>Title:</b> <%= seo_option.title %></p>
                  <p><b>Description:</b> <%= seo_option.description %></p>
                  <p><b>Keywords:</b> <%= seo_option.keywords %></p>
                  <p><b>Twitter Title:</b><%= seo_option.twitter_title%><br>
                    <%#= image_tag seo_option.twitter_image, class: "img-responsive", style: "width: 40px;" %>
                  </p>
                  <p><b>Facebook Title:</b><%= seo_option.facebook_title%><br>
                    <%#= image_tag seo_option.og_image, class: "img-responsive", style: "width: 40px;" %>
                  </p>
                  <%= link_to edit_seo_option_path(seo_option), class: "btn btn-default btn-xs pull-right" do %>
                    <i class="glyphicon glyphicon-edit"></i>
                  <% end %>
                  <%= link_to 'Destroy', seo_option, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs",style: "color: #fff;" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
<br>

<%#= link_to 'New Seo option', new_seo_option_path, class: "btn btn-default" %>

</section>