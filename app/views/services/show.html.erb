                </div>
                <div class="panel-body">
                    <ul class="nav nav-stack">
                        <% @services.each do |service| %>   
                        <li><%= link_to service_path(service), class: "nav-link", style: "color: #00fafa;" do %> <%= service.title %> <% end %>
                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
