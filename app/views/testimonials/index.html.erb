<div class="fullwidth-section dt-sc-parallax-section dt-sc-client-testimonial" style="margin-top: 120px;">
  <div class="fullwidth-bg">
   <div class="container">
    <div class="hr-invisible"></div>
    <h2 class="border-title aligncenter animate" data-delay="100" data-animation="animated fadeInDown">
      TESTIMONIALS
    </h2>
    <div class="dt-sc-testimonial-carousel-wrapper">
      <ul class="dt-sc-testimonial-carousel">
      <% @testimonials.each do |testimonial| %>
       <li>
        <div class="dt-sc-testimonial">
       <div class="author">
        <span class="hexagon2"></span> 
        <div class="hexagon-image">
         <div class="hexagon-in1">
          <div class="hexagon-in2 founder-image img1">
           <%= image_tag testimonial.image.url, alt: ""%>
         </div>
       </div>
     </div>
   </div>
   <div class="author-detail">
    <%= testimonial.name %>  <span> <%= testimonial.place %> </span>
  </div>
</div>
</li>
<% end %>
</ul>
</div>
<div class="hr-invisible"></div>
</div>
</div>
</div>
