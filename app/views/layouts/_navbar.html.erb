<header id="header" class="type1">
 <div class="container-fluid">
  <div class="main-menu-container">
   <div class="main-menu">
    <div id="logo">
      <h2>
        <%= link_to root_path do%>
          <%= image_tag("logo.png", alt: "blackstone security logo") %><span><span class="alter_color">BLACKSTONE</span>SECURITY</span>
        <% end %>
      </h2>
   </div>
   <div class="dt-sc-header-shape"><a class="dt-sc-button medium alignright" href="#">Phone:- +91 8951411747</a><span class="hexagon"> <span class="corner1"></span><span class="corner2"></span></span></div>
   <div id="primary-menu">
     <div class="dt-menu-toggle" id="dt-menu-toggle">Menu<span class="dt-menu-toggle-icon"></span></div>
     <nav id="main-menu">
      <ul class="menu">
       <li class="current_page_item menu-item-simple-parent">
        <%= link_to root_path do %>Home<% end %>
      </li>
      <li class="dropdown menu-item-simple-parent">
       <%= link_to root_path do%>Services<% end %>
        <ul class="sub-menu">
        <% Service.all.each do |service|%>
         <li><%= link_to "#{service.title}", service_path(service) %></li>
        <% end %>
       </ul>
       <a class="dt-menu-expand">+</a>
     </li>
     <li class="menu-item-simple-parent">
      <%= link_to "About Us",abouts_path %>
    </li>
    <% if  user_signed_in? %>
    <li class="menu-item-simple-parent">
      <%= link_to "Leads", contacts_path %>
    </li>
    <li class="menu-item-simple-parent">
     <%= link_to 'Logout', destroy_user_session_path, :method => :delete  %>
   </li>
   <% end %>
 </ul>
</nav>
</div>
</div>
</div>
</div>
</header>