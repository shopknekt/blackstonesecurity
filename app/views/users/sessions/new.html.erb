<section style="padding: 60px;">
<div class="container">

<h1 class="z-center">LOG IN</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email,style: "color: #fff; font-size: 20px;" %><br />
    <%= f.email_field :email, class: "form-control",placeholder: "Enter email id" %>
  </div>


  <div class="field">
    <%= f.label :password,style: "color: #fff; font-size: 20px;" %><br />
    <%= f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "Enter password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,style: "color: #fff; font-size: 14px;" %>
    </div>
  <% end -%>

  <div class="actions z-action">
    <%= f.submit "Log in", style: "color:#fff;"%>
  </div>
<% end %>

<%#= render "users/shared/links" %>
</div>
</section>